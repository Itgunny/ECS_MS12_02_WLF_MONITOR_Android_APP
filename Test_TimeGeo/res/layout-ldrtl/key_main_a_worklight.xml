<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_key_main_b_worklight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_a_bg_right" 
    android:splitMotionEvents="false">
    
    <RadioGroup
        android:id="@+id/radioGroup_key_main_a_worklight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginLeft="300dp" 
        android:layout_centerVertical="true" 
        android:splitMotionEvents="false">

       <RadioButton
           android:id="@+id/radioButton_key_main_a_worklight_off"
           android:layout_width="400dp"
           android:layout_height="wrap_content"
           android:drawablePadding="20dip"
           android:button="@null"
           android:drawableRight="@drawable/_selector_radio_btn"
           android:gravity="right"
           android:text="@string/Off"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:singleLine="true"
           android:textSize="25sp" />

       <RadioButton
           android:id="@+id/radioButton_key_main_a_worklight_front"
           android:layout_width="400dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:drawablePadding="20dip"
           android:button="@null"
           android:drawableRight="@drawable/_selector_radio_btn"
           android:gravity="right"
           android:text="@string/Front"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:singleLine="true"
           android:textSize="25sp" />
       
       <RadioButton
           android:id="@+id/radioButton_key_main_a_worklight_rear"
           android:layout_width="400dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:drawablePadding="20dip"
           android:button="@null"
           android:drawableRight="@drawable/_selector_radio_btn"
           android:gravity="right"
           android:text="@string/Rear"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:singleLine="true"
           android:textSize="25sp" />

   </RadioGroup>

</RelativeLayout>
