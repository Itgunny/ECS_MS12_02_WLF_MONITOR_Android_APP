<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout_menu_body_preference_brightness_auto_low"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp" 
        android:splitMotionEvents="false">
        
        <RelativeLayout
            android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/RelativeLayout_menu_body_preference_brightness_auto_time"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/RelativeLayout_menu_body_preference_brightness_auto_time"
            android:layout_toLeftOf="@+id/RelativeLayout_menu_body_preference_brightness_auto_time" 
            android:splitMotionEvents="false">
            
            <ImageView
                android:id="@+id/imageView_menu_body_preference_brightness_auto_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/menu_bluedot" />

            <TextView
                android:id="@+id/textView_menu_body_preference_brightness_auto_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imageView_menu_body_preference_brightness_auto_time_title"
                android:text="@string/Time_settings_for_daytime"
                android:textAppearance="?android:attr/textAppearanceLarge" />

	    </RelativeLayout>

	    <RelativeLayout
	        android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_day_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/RelativeLayout_menu_body_preference_brightness_auto_day"
	        android:layout_alignParentLeft="true"
	        android:layout_alignTop="@+id/RelativeLayout_menu_body_preference_brightness_auto_day"
	        android:layout_toLeftOf="@+id/RelativeLayout_menu_body_preference_brightness_auto_day" 
	        android:splitMotionEvents="false">
            
	        <ImageView
                android:id="@+id/imageView_menu_body_preference_brightness_auto_day_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/menu_bluedot" />

            <TextView
                android:id="@+id/textView_menu_body_preference_brightness_auto_day_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imageView_menu_body_preference_brightness_auto_day_title"
                android:text="@string/Daytime"
                android:textAppearance="?android:attr/textAppearanceLarge" />

	    </RelativeLayout>

	    <RelativeLayout
	        android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_night_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/RelativeLayout_menu_body_preference_brightness_auto_night"
	        android:layout_alignParentLeft="true"
	        android:layout_alignTop="@+id/RelativeLayout_menu_body_preference_brightness_auto_night"
	        android:layout_toLeftOf="@+id/RelativeLayout_menu_body_preference_brightness_auto_night" 
	        android:splitMotionEvents="false">
            
	        <ImageView
                android:id="@+id/imageView_menu_body_preference_brightness_auto_night_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/menu_bluedot" />

            <TextView
                android:id="@+id/textView_menu_body_preference_brightness_auto_night_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imageView_menu_body_preference_brightness_auto_night_title"
                android:text="@string/Nighttime"
                android:textAppearance="?android:attr/textAppearanceLarge" />

	    </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/RelativeLayout_menu_body_preference_brightness_auto_day"
            android:layout_alignLeft="@+id/RelativeLayout_menu_body_preference_brightness_auto_day"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" 
            android:splitMotionEvents="false">

	        <LinearLayout
	            android:id="@+id/LinearLayout_menu_body_preference_brightness_auto_time_start"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	            
	            <ImageButton
		            android:id="@+id/imageButton_menu_body_preference_brightness_auto_time_start_minus"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/_selector_menu_body_preference_brightness_auto_munus_btn1" />

	            <TextView
	                android:id="@+id/textView_menu_body_preference_brightness_auto_time_start_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/menu_preperence_brightness_auto_nember_bg"
	                android:gravity="center"
	                android:text="0"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textColor="@color/white"
	                android:textSize="30sp" />
	            
	            <ImageButton
	                android:id="@+id/imageButton_menu_body_preference_brightness_auto_time_start_plus"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/_selector_menu_body_preference_brightness_auto_plus_btn1" />

	        </LinearLayout>

	        <TextView
	            android:id="@+id/textView_menu_body_preference_brightness_auto_time_dash"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:gravity="center"
	            android:text="~"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="@color/gray"
	            android:textSize="40sp" />
	        
	        <LinearLayout
	            android:id="@+id/LinearLayout_menu_body_preference_brightness_auto_time_end"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	            
	            <ImageButton
		            android:id="@+id/imageButton_menu_body_preference_brightness_auto_time_end_minus"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/_selector_menu_body_preference_brightness_auto_munus_btn1" />

	            <TextView
	                android:id="@+id/textView_menu_body_preference_brightness_auto_time_end_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/menu_preperence_brightness_auto_nember_bg"
	                android:gravity="center"
	                android:text="0"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textColor="@color/white"
	                android:textSize="30sp" />
	            
	            <ImageButton
	                android:id="@+id/imageButton_menu_body_preference_brightness_auto_time_end_plus"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/_selector_menu_body_preference_brightness_auto_plus_btn1" />

	        </LinearLayout>

    	</RelativeLayout>
    
	    <RelativeLayout
	        android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true" 
	        android:splitMotionEvents="false">
	
	        <RelativeLayout
	            android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_day_seekbar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_preference_brightness_auto_day_seekbar_bg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:src="@drawable/menu_preperence_brightness_auto_slide_bg" />
	
	            <SeekBar
	                android:id="@+id/seekBar_menu_body_preference_brightness_auto_day"
	                style="@style/RideControlSpeedSeekBar"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/imageView_menu_body_preference_brightness_auto_day_seekbar_bg"
	                android:layout_alignRight="@+id/imageView_menu_body_preference_brightness_auto_day_seekbar_bg"
	                android:maxHeight="7dp"
	                android:minHeight="5dp"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:thumb="@drawable/_selector_seekbar_thumb" />
	
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_night"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/RelativeLayout_menu_body_preference_brightness_auto_day" 
	        android:splitMotionEvents="false">
	
	        <RelativeLayout
	            android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_night_seekbar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_preference_brightness_auto_night_seekbar_bg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:src="@drawable/menu_preperence_brightness_auto_slide_bg" />
	
	            <SeekBar
	                android:id="@+id/seekBar_menu_body_preference_brightness_auto_night"
	                style="@style/RideControlSpeedSeekBar"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/imageView_menu_body_preference_brightness_auto_night_seekbar_bg"
	                android:layout_alignRight="@+id/imageView_menu_body_preference_brightness_auto_night_seekbar_bg"
	                android:maxHeight="7dp"
	                android:minHeight="5dp"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:thumb="@drawable/_selector_seekbar_thumb" />
	
	        </RelativeLayout>
	    </RelativeLayout>

    </RelativeLayout>
    
    
    
    
    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_preference_brightness_auto_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageView_menu_body_preference_brightness_auto_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />

        

        <ImageButton
            android:id="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_preference_brightness_auto_low_bg"
            android:layout_alignRight="@+id/imageView_menu_body_preference_brightness_auto_low_bg"
            android:background="@drawable/_selector_menu_low_right_btn" />

        <ImageButton
            android:id="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_preference_brightness_auto_low_bg"
            android:layout_toLeftOf="@+id/imageView_menu_body_preference_brightness_auto_low_line_1"
            android:background="@drawable/_selector_menu_low_center_btn" />
        
        <ImageView
            android:id="@+id/imageView_menu_body_preference_brightness_auto_low_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_preference_brightness_auto_low_bg"
            android:layout_alignLeft="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
            android:src="@drawable/main_key_low_line" />

        <ImageView
            android:id="@+id/imageView_menu_body_preference_brightness_auto_low_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_preference_brightness_auto_low_bg"
            android:layout_alignLeft="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
            android:src="@drawable/main_key_low_line" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
            android:layout_alignLeft="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
            android:layout_alignRight="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
            android:layout_alignTop="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok" 
            android:splitMotionEvents="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" 
                android:splitMotionEvents="false">

                <ImageView
                    android:id="@+id/imageView_menu_body_preference_brightness_auto_low_ok_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
                    android:layout_alignLeft="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
                    android:layout_alignTop="@+id/ImageButton_menu_body_preference_brightness_auto_low_ok"
                    android:src="@drawable/menu_low_icon_ok" />

                <TextView
                    android:id="@+id/textView_menu_body_preference_brightness_auto_low_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/OK"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
            android:layout_alignLeft="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
            android:layout_alignRight="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
            android:layout_alignTop="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel" 
            android:splitMotionEvents="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" 
                android:splitMotionEvents="false">

                <ImageView
                    android:id="@+id/imageView_menu_body_preference_brightness_auto_low_cancel_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
                    android:layout_alignLeft="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
                    android:layout_alignTop="@+id/ImageButton_menu_body_preference_brightness_auto_low_cancel"
                    android:src="@drawable/menu_low_icon_cancel" />

                <TextView
                    android:id="@+id/textView_menu_body_preference_brightness_auto_low_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/Cancel"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    

</RelativeLayout>
