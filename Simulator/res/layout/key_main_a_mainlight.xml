<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_key_main_a_mainlight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_a_bg_right" 
    android:splitMotionEvents="false">
    
    <RadioGroup
        android:id="@+id/radioGroup_key_main_a_mainlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="205dp"
        android:layout_centerVertical="true" 
        android:splitMotionEvents="false">

       <RadioButton
           android:id="@+id/radioButton_key_main_a_mainlight_off"
           android:layout_width="500dp"
           android:layout_height="wrap_content"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/Off"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />

       <RadioButton
           android:id="@+id/radioButton_key_main_a_mainlight_positionlamp"
           android:layout_width="500dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/Position_Lamp"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />
       
       <RadioButton
           android:id="@+id/radioButton_key_main_a_mainlight_headlamp"
           android:layout_width="500dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/Head_Lamp"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />

   </RadioGroup>

</RelativeLayout>
