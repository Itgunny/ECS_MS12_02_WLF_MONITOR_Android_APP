<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_popup_main_axle_warning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_popup01_bg" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_main_axle_warning_title"
        android:layout_width="448dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
        
       <TextView
           android:id="@+id/textView_popup_main_axle_warning_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_toRightOf="@+id/imageView_popup_main_axle_warning"
           android:gravity="left"
           android:text="@string/Axle_Warning"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="@color/red"
           android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView_popup_main_axle_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/main_warning_icon_axle" />

    </RelativeLayout>

</RelativeLayout>
