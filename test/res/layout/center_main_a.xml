<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_center_main_a_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_a_center_bg01" >
    
    <ImageView 
        android:id="@+id/imageView_center_main_a_gauge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@drawable/main_a_rpm_guage" />

    <ImageView
        android:id="@+id/imageView_center_main_a_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/main_a_center" />

    <ImageButton
        android:id="@+id/imageButton_center_main_a_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/_selector_center_main_a_btn" />
    
    <TextView
        android:id="@+id/textView_center_main_a_rpm"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="bottom|right"
        android:text="2500"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        android:textStyle="bold|italic" />
    

    <ImageView
        android:id="@+id/imageView_center_main_a_smkicon"
        android:layout_width="210dp"
        android:layout_height="208dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/main_smart_key_green"
        android:visibility="invisible" />
</RelativeLayout>