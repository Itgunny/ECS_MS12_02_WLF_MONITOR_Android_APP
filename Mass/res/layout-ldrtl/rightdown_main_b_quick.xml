<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_rightdown_main_b_quick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_selector_rightdown_quick_btn" 
    android:splitMotionEvents="false">

    <ImageView
        android:id="@+id/imageView_rightdown_main_b_quick_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/main_quick_icon_maint" />

    <taeha.wheelloader.fseries_monitor.main.TextFitTextView
        android:id="@+id/textView_rightdown_main_b_quick_title"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_rightdown_main_b_quick_icon"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/Maintenance"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_title_amber"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/imageButton_rightdown_main_b_quick_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/_selector_virtualkey_media" />

</RelativeLayout>
