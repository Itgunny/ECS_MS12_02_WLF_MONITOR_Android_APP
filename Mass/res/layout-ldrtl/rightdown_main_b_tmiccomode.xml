<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_rightdown_main_b_tmiccomode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_right_down_ani" 
    android:splitMotionEvents="false">
    
    <TextView
        android:id="@+id/textView_rightdown_main_b_tmiccomode_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView_rightdown_main_b_tmiccomode_line"
        android:layout_marginRight="20dp"
        android:layout_marginTop="84dp"
        android:text="@string/ICCO_MODE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_title_amber"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView_rightdown_main_b_tmiccomode_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="278dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/main_popup_line" />
    
	<RadioButton
	    android:id="@+id/radioButton_rightdown_main_b_tmiccomode_off"
	    android:layout_width="350dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="328dp"
	    android:layout_marginTop="84dp"
        android:drawablePadding="20dip"
        android:button="@null"
        android:drawableRight="@drawable/_selector_radio_btn"
        android:gravity="right"
        android:text="@string/OFF"
	    android:textColor="@drawable/_selector_radio_txt_white_amber"
	    android:singleLine="true"
	    android:textSize="25sp" />
	
	<RadioButton
	    android:id="@+id/radioButton_rightdown_main_b_tmiccomode_h"
	    android:layout_width="350dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="328dp"
	    android:layout_marginTop="163dp"
        android:drawablePadding="20dip"
        android:button="@null"
        android:drawableRight="@drawable/_selector_radio_btn"
        android:gravity="right"
	    android:text="@string/ON"
	    android:textColor="@drawable/_selector_radio_txt_white_amber"
	    android:textSize="25sp"
	    android:singleLine="true"
	    android:textStyle="normal" />

</RelativeLayout>
