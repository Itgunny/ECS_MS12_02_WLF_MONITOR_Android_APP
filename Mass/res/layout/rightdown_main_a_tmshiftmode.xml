<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_rightdown_main_a_tmshiftmode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_a_bg_right" 
    android:splitMotionEvents="false">
    
    <TextView
        android:id="@+id/textView_rightdown_main_a_tmshiftmode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView_rightdown_main_a_tmshiftmode_line"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:text="@string/SHIFT_MODE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_title_amber"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView_rightdown_main_a_tmshiftmode_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360dp"
        android:layout_centerVertical="true"
        android:src="@drawable/main_popup_line" />
    
       <RadioButton
           android:id="@+id/radioButton_rightdown_main_a_tmshiftmode_manual"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="400dp"
           android:layout_marginTop="100dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/MANUAL"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />

       <RadioButton
           android:id="@+id/radioButton_rightdown_main_a_tmshiftmode_al"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="574dp"
           android:layout_marginTop="100dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/AL"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />
       
       <RadioButton
           android:id="@+id/radioButton_rightdown_main_a_tmshiftmode_an"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="400dp"
           android:layout_marginTop="200dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/AN"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />
       
       <RadioButton
           android:id="@+id/radioButton_rightdown_main_a_tmshiftmode_ah"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="574dp"
           android:layout_marginTop="200dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/AH"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp"
           android:textStyle="normal" />

</RelativeLayout>
