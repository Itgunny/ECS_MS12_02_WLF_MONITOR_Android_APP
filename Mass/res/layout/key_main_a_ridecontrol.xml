<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_key_main_a_ridecontrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_a_bg_right" 
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/RelativeLayout_key_main_a_ridecontrol_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:splitMotionEvents="false">

        <RadioGroup
            android:id="@+id/radioGroup_key_main_a_ridecontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="50dp" 
            android:splitMotionEvents="false">

            <RadioButton
                android:id="@+id/radioButton_key_main_a_ridecontrol_off"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/Off"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imageView_key_main_a_ridecontrol_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/main_key_line" />

            <RadioButton
                android:id="@+id/radioButton_key_main_a_ridecontrol_on_always"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/On_Always"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imageView_key_main_a_ridecontrol_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/main_key_line" />

            <RadioButton
                android:id="@+id/radioButton_key_main_a_ridecontrol_on_conditional"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/On_Conditional_Speed"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView_key_main_a_ridecontrol_on_conditional_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="680dp"
            android:layout_marginTop="220dp"
            android:src="@drawable/main_key_list_arrow" />

        <RelativeLayout
            android:id="@+id/Relativelayout_key_main_a_ridecontrol_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="280dp" 
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageView_key_main_a_ridecontrol_low_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_a_key_low_bg" />

            <ImageView
                android:id="@+id/imageView_key_main_a_ridecontrol_low_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_key_main_a_ridecontrol_low_bg"
                android:layout_toLeftOf="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                android:src="@drawable/main_key_low_line" />

            <ImageButton
                android:id="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_key_main_a_ridecontrol_low_bg"
                android:layout_alignRight="@+id/imageView_key_main_a_ridecontrol_low_bg"
                android:background="@drawable/_selector_key_centerright_btn2" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                android:layout_alignLeft="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                android:layout_alignRight="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                android:layout_alignTop="@+id/ImageButton_key_main_a_ridecontrol_low_ok" 
                android:splitMotionEvents="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" 
                    android:splitMotionEvents="false">

                    <ImageView
                        android:id="@+id/imageView_key_main_a_ridecontrol_low_ok_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                        android:layout_alignLeft="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                        android:layout_alignTop="@+id/ImageButton_key_main_a_ridecontrol_low_ok"
                        android:src="@drawable/menu_low_icon_ok" />

                    <TextView
                        android:id="@+id/textView_key_main_a_ridecontrol_low_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/OK"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_key_main_a_ridecontrol_notavailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="205dp"
        android:visibility="invisible" 
        android:splitMotionEvents="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ride_Control_is_NOT_equipped"
            android:textColor="@drawable/_selector_radio_txt_white_amber"
            android:textSize="25sp" />
    </RelativeLayout>

</RelativeLayout>