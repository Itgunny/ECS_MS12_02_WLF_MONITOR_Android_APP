<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_key_main_a_quickcoupler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_a_bg_right" 
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/RelativeLayout_key_main_a_quickcoupler_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:splitMotionEvents="false">

        <taeha.wheelloader.fseries_monitor.main.TextFitTextView
            android:id="@+id/textView_key_main_a_quickcoupler_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="251dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/_selector_key_quickcoupler_btn1"
            android:gravity="center"
            android:text="@string/Locking_Attachment"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <taeha.wheelloader.fseries_monitor.main.TextFitTextView
            android:id="@+id/textView_key_main_a_quickcoupler_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_key_main_a_quickcoupler_lock"
            android:layout_below="@+id/textView_key_main_a_quickcoupler_lock"
            android:layout_marginTop="30dp"
            android:background="@drawable/_selector_key_quickcoupler_btn1"
            android:gravity="center"
            android:text="@string/Unlocking_Attachment"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_key_main_a_quickcoupler_notavailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="205dp"
        android:visibility="invisible" 
        android:splitMotionEvents="false">

        <taeha.wheelloader.fseries_monitor.main.TextFitTextView
            android:id="@+id/textView_key_main_a_quickcoupler_notavailable_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Quick_Coupler_is_NOT_equipped"
            android:textColor="@drawable/_selector_radio_txt_white_amber"
            android:textSize="25sp" />
    </RelativeLayout>

</RelativeLayout>