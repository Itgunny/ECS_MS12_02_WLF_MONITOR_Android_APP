<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_popup_coolingfan_manual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_popup01_bg" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_coolingfan_manual_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

	    <ImageView
	        android:id="@+id/imageView_popup_coolingfan_manual_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="68dp"
	        android:src="@drawable/menu_popup01_line" />
	
	    <TextView
	        android:id="@+id/textView_popup_coolingfan_manual_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:text="@string/Manual"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/black"
	        android:textSize="25sp"
	        android:textStyle="bold" />

	    <ImageView
	        android:id="@+id/imageView_popup_coolingfan_manual"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView_popup_coolingfan_manual_title"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:background="@drawable/menu_mode_fan_manual_icon_gray_popup" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_coolingfan_manual_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/RelativeLayout_popup_coolingfan_manual_title"
        android:layout_centerHorizontal="true" >
        
        <ImageButton
	        android:id="@+id/imageButton_popup_coolingfan_manual_excute"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/_selector_popup01_short_btn1" />
	
	    <ImageButton
	        android:id="@+id/imageButton_popup_coolingfan_manual_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/imageButton_popup_coolingfan_manual_excute"
	        android:layout_marginLeft="20dp"
	        android:layout_toRightOf="@+id/imageButton_popup_coolingfan_manual_excute"
	        android:background="@drawable/_selector_popup01_short_btn1" />
	
	    <TextView
	        android:id="@+id/textView_popup_coolingfan_manual_excute"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton_popup_coolingfan_manual_excute"
	        android:layout_alignLeft="@+id/imageButton_popup_coolingfan_manual_excute"
	        android:layout_alignRight="@+id/imageButton_popup_coolingfan_manual_excute"
	        android:layout_alignTop="@+id/imageButton_popup_coolingfan_manual_excute"
	        android:gravity="center"
	        android:text="@string/Excute"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/black"
	        android:textSize="30sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/textView_popup_coolingfan_manual_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton_popup_coolingfan_manual_ok"
	        android:layout_alignLeft="@+id/imageButton_popup_coolingfan_manual_ok"
	        android:layout_alignRight="@+id/imageButton_popup_coolingfan_manual_ok"
	        android:layout_alignTop="@+id/imageButton_popup_coolingfan_manual_ok"
	        android:gravity="center"
	        android:text="@string/OK"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/black"
	        android:textSize="30sp"
	        android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
