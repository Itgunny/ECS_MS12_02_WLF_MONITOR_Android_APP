<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_key_main_b_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_key_title_bg"
    android:orientation="vertical" 
    android:splitMotionEvents="false">

    <ImageView
        android:id="@+id/imageView_key_main_b_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/main_key_title_mainlight" />

    <taeha.wheelloader.fseries_monitor.main.TextFitTextView
        android:id="@+id/textView_key_main_b_title"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="@string/Main_Light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_title_amber"
        android:textStyle="bold|italic" />

</RelativeLayout>
