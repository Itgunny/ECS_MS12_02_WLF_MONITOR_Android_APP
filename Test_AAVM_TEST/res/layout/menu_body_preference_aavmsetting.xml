<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:splitMotionEvents="false">
    
	<ImageView
	        android:id="@+id/imageView_menu_body_preference_aavmsetting_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="29dp"
	        android:layout_marginTop="284dp"
	        android:src="@drawable/line_menu_step1" />
	
    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_preference_aavmsetting_revesecamera_aavm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_menu_body_preference_aavmsetting_line"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView_menu_body_preference_aavmsetting_line" 
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageView_menu_body_preference_aavmsetting_point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:src="@drawable/menu_bluedot" />
        
        <taeha.wheelloader.fseries_monitor.main.TextFitTextView
            android:id="@+id/textView_menu_body_preference_aavmsetting_reversecamera_title"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
 			android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imageView_menu_body_preference_aavmsetting_point1"
            android:gravity="left|center_vertical"
            android:text="후진기어시 AAVM 화면타입 설정"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <RadioGroup
            android:id="@+id/radioGroup_menu_body_preference_aavmsetting_reversecamera_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="47dp"
            android:layout_toRightOf="@+id/textView_menu_body_preference_aavmsetting_reversecamera_title"
            android:orientation="horizontal" 
            android:splitMotionEvents="false">
            
			<RadioButton
		    	android:id="@+id/radioGroup_menu_body_preference_aavmsetting_reversecamera_on"
		    	android:layout_width="200dp"
		    	android:layout_height="wrap_content"
		    	android:button="@drawable/_selector_radio_btn"
		    	android:text="@string/On"
		    	android:textColor="@drawable/_selector_radio_txt_white_amber"
		    	android:singleLine="true"
		    	android:textSize="25sp" />
		
			<RadioButton
		    	android:id="@+id/radioGroup_menu_body_preference_aavmsetting_reversecamera_off"
		    	android:layout_width="200dp"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="20dp"
		    	android:button="@drawable/_selector_radio_btn"
		    	android:text="@string/Off"
		    	android:textColor="@drawable/_selector_radio_txt_white_amber"
		    	android:singleLine="true"
		    	android:textSize="25sp" />
   	  </RadioGroup>        
        
      
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_preference_aavmsetting_displaytype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_menu_body_preference_aavmsetting_line"
        android:layout_alignLeft="@+id/imageView_menu_body_preference_aavmsetting_line"
        android:layout_alignRight="@+id/imageView_menu_body_preference_aavmsetting_line"
        android:layout_below="@+id/RelativeLayout_menu_body_preference_aavmsetting_revesecamera_aavm"
        android:splitMotionEvents="false">
        
        <LinearLayout
        	android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp" 
        	android:splitMotionEvents="false">
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" 
                android:splitMotionEvents="false">

			<ImageButton
			    android:id="@+id/ImageView_menu_body_preference_aavm_front"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
			    android:gravity="center"
			    android:src="@drawable/menu_preference_aavm_icon_front" />

			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_rear"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:gravity="center"
            	android:src="@drawable/menu_preference_aavm_icon_rear" />
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_left"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:gravity="center" 
            	android:src="@drawable/menu_preference_aavm_icon_left"/>
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_right"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:gravity="center" 
            	android:src="@drawable/menu_preference_aavm_icon_right"/>
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_camera_4ch"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:src="@drawable/menu_preference_aavm_icon_4ch"
            	android:gravity="center" />
			</LinearLayout>
			
		<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="5dp" 
        	android:splitMotionEvents="false">
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_3d_bird"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:src="@drawable/menu_preference_aavm_icon_3d_bird"
            	android:gravity="center"/>
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_3d_rear"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:src="@drawable/menu_preference_aavm_icon_3d_rear"
            	android:gravity="center"/>
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_2d_bird"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:src="@drawable/menu_preference_aavm_icon_2d_bird"
            	android:gravity="center" />
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_3d_left"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:src="@drawable/menu_preference_aavm_icon_3d_left"
            	android:gravity="center" />
			<ImageButton
            	android:id="@+id/ImageView_menu_body_preference_aavm_3d_right"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/_selector_menu_body_preference_aavm_list_btn1"
            	android:src="@drawable/menu_preference_aavm_icon_3d_right"
            	android:gravity="center"/>
			</LinearLayout>
		</LinearLayout>          
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_preference_aavmsetting_gearmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout_menu_body_preference_aavmsetting_low"
        android:layout_alignLeft="@+id/imageView_menu_body_preference_aavmsetting_line"
        android:layout_alignRight="@+id/imageView_menu_body_preference_aavmsetting_line"
        android:layout_below="@+id/imageView_menu_body_preference_aavmsetting_line" 
        android:splitMotionEvents="false">

        <CheckBox
            android:id="@+id/checkBox_menu_body_preference_aavmsetting_gearmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/_selector_check_btn"
            android:paddingLeft="25dp"
            android:text="@string/Gear_Linkage_Mode"
            android:textColor="@drawable/_selector_radio_txt_white_amber"
            android:textSize="25sp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_preference_aavmsetting_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:splitMotionEvents="false">
        
        <ImageView
            android:id="@+id/imageView_menu_body_preference_aavmsetting_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />
	   
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_preference_aavmsetting_low_bg"
	        android:layout_alignRight="@+id/imageView_menu_body_preference_aavmsetting_low_bg"
	        android:background="@drawable/_selector_menu_low_right_btn" />
	    
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_preference_aavmsetting_low_bg"
	        android:layout_toLeftOf="@+id/imageView_menu_body_preference_aavmsetting_low_line_1"
	        android:background="@drawable/_selector_menu_low_center_btn" />
	    
	    <ImageView
		     android:id="@+id/imageView_menu_body_preference_aavmsetting_low_line_1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignBottom="@+id/imageView_menu_body_preference_aavmsetting_low_bg"
		     android:layout_alignLeft="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
		     android:src="@drawable/main_key_low_line" />
		
		<ImageView
		    android:id="@+id/imageView_menu_body_preference_aavmsetting_low_line_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/imageView_menu_body_preference_aavmsetting_low_bg"
		    android:layout_alignLeft="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
		    android:src="@drawable/main_key_low_line" />
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
	        android:layout_alignRight="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
	        android:layout_alignTop="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok" 
	        android:splitMotionEvents="false">
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_preference_aavmsetting_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
	                android:layout_alignTop="@+id/ImageButton_menu_body_preference_aavmsetting_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <taeha.wheelloader.fseries_monitor.main.TextFitTextView
	                android:id="@+id/textView_menu_body_preference_aavmsetting_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />
	
	        </LinearLayout>
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
	        android:layout_alignRight="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
	        android:layout_alignTop="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel" 
	        android:splitMotionEvents="false">
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_preference_aavmsetting_low_cancel_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
	                android:layout_alignTop="@+id/ImageButton_menu_body_preference_aavmsetting_low_cancel"
	                android:src="@drawable/menu_low_icon_cancel" />
	
	            <taeha.wheelloader.fseries_monitor.main.TextFitTextView
	                android:id="@+id/textView_menu_body_preference_aavmsetting_low_cancel"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/Cancel"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />
	
	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
