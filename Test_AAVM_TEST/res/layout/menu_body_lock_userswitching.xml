<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:splitMotionEvents="false">
        <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_userswitching_lock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_menu_body_userswitching_line"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp" 
        android:splitMotionEvents="false">

	    <ImageView
	        android:id="@+id/imageView_menu_body_userswitching_lock_background"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/menu_management_machine_monitoring_bg_dark" />
	
	    <TextView
	        android:id="@+id/textView_menu_body_userswitching_lock_first"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_userswitching_lock_background"
	        android:layout_alignLeft="@+id/imageView_menu_body_userswitching_lock_background"
	        android:layout_alignTop="@+id/imageView_menu_body_userswitching_lock_background"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="30dp"
	        android:gravity="center"
	        android:text="@string/Item"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/white"
	        android:textSize="20sp" />
	    
	    <ImageView
	        android:id="@+id/imageView_menu_body_userswitching_lock_line1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/textView_menu_body_userswitching_lock_first"
	        android:src="@drawable/menu_userswitching_line" />
	    
	    <TextView
	        android:id="@+id/textView_menu_body_userswitching_lock_second"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_userswitching_lock_background"
	        android:layout_alignTop="@+id/imageView_menu_body_userswitching_lock_background"
	        android:layout_toRightOf="@+id/imageView_menu_body_userswitching_lock_line1"
	        android:gravity="center"
	        android:paddingRight="10dp"
	        android:text="@string/Current_Data"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textSize="20sp" />
	    
	    <ImageView
	        android:id="@+id/imageView_menu_body_userswitching_lock_line2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/textView_menu_body_userswitching_lock_second"
	        android:src="@drawable/menu_userswitching_line" />
	    
	    <ImageView
	        android:id="@+id/imageView_menu_body_userswitching_lock_line3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/imageView_menu_body_userswitching_lock_line2"
	        android:src="@drawable/menu_userswitching_line" />
	
	    <CheckBox
	        android:id="@+id/imageView_menu_body_userswitching_lock_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@drawable/_selector_check_btn"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="24dp"
	        android:layout_toRightOf="@+id/imageView_menu_body_userswitching_lock_line3"
	        android:visibility="gone"/>

    </RelativeLayout>
    
    <ListView
        android:id="@+id/listView_menu_body_userswitching_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Relativelayout_menu_body_userswitching_lock_low"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/RelativeLayout_menu_body_userswitching_lock_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:divider="@drawable/blank_5x5"
        android:listSelector="@drawable/blank_1x1"
        android:scrollbarAlwaysDrawVerticalTrack="true" >
    </ListView>
    
    <RelativeLayout
        android:id="@+id/Relativelayout_menu_body_userswitching_lock_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:splitMotionEvents="false">
       
        <ImageView
            android:id="@+id/imageView_menu_body_userswitching_lock_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />
	   
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_userswitching_lock_low_bg"
	        android:layout_alignRight="@+id/imageView_menu_body_userswitching_lock_low_bg"
	        android:background="@drawable/_selector_menu_low_right_btn" />
	    
	    <ImageView
	        android:id="@+id/imageView_menu_body_userswitching_lock_low_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	        android:src="@drawable/main_key_low_line" />
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	        android:layout_alignRight="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	        android:layout_alignTop="@+id/ImageButton_menu_body_userswitching_lock_low_ok" 
	        android:splitMotionEvents="false">
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_userswitching_lock_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	                android:layout_alignTop="@+id/ImageButton_menu_body_userswitching_lock_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <taeha.wheelloader.fseries_monitor.main.TextFitTextView
	                android:id="@+id/textView_menu_body_userswitching_lock_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />

	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
