<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_rightdown_main_b_engine_tmtclockup_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_right_up" 
    android:splitMotionEvents="false">
    
    <TextView
        android:id="@+id/textView_rightdown_main_b_tmtclockup_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView_rightdown_main_b_tmtclockup_line"
        android:layout_marginRight="20dp"
        android:layout_marginTop="84dp"
        android:text="@string/TC_LOCK_UP"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_title_amber"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView_rightdown_main_b_tmtclockup_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="278dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/main_popup_line" />
    
    <RadioGroup
        android:id="@+id/radioGroup_rightdown_main_b_tmtclockup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="328dp" 
        android:splitMotionEvents="false">

       <RadioButton
           android:id="@+id/radioButton_rightdown_main_b_tmtclockup_off"
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/OFF"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:singleLine="true"
           android:textSize="25sp" />

       <RadioButton
           android:id="@+id/radioButton_rightdown_main_b_tmtclockup_on"
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/ON"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:singleLine="true"
           android:textSize="25sp" />

   </RadioGroup>

</RelativeLayout>
