	<RelativeLayout
        android:id="@+id/Relativelayout_key_main_b_workload_display_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="52dp"
        android:layout_marginTop="303dp"
        android:splitMotionEvents="false">
       
        <ImageView
	        android:id="@+id/imageView_key_main_b_workload_display_low_bg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/main_key_low_bg" />
	    
	    <ImageView
	        android:id="@+id/imageView_key_main_b_workload_display_low_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_key_main_b_workload_display_low_bg"
	        android:layout_alignRight="@+id/ImageButton_key_main_b_workload_display_low_ok"
	        android:layout_marginRight="190dp"
	        android:src="@drawable/main_key_low_line" />
	   
	    <ImageButton
	        android:id="@+id/ImageButton_key_main_b_workload_display_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_key_main_b_workload_display_low_bg"
	        android:layout_alignRight="@+id/imageView_key_main_b_workload_display_low_bg"
	        android:background="@drawable/_selector_key_centerright_btn1" />
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_key_main_b_workload_display_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_key_main_b_workload_display_low_ok"
	        android:layout_alignRight="@+id/ImageButton_key_main_b_workload_display_low_ok"
	        android:layout_alignTop="@+id/ImageButton_key_main_b_workload_display_low_ok" 
	        android:splitMotionEvents="false">
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_key_main_b_workload_display_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_key_main_b_workload_display_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_key_main_b_workload_display_low_ok"
	                android:layout_alignTop="@+id/ImageButton_key_main_b_workload_display_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <taeha.wheelloader.fseries_monitor.main.TextFitTextView
	                android:id="@+id/textView_key_main_b_workload_display_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />

	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>

