<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_key_main_b_workload_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_key_bg" 
    android:splitMotionEvents="false">

    <ImageView
        android:id="@+id/imageView_key_main_b_workload_display_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/main_key_line" />
    
    <ImageView
        android:id="@+id/imageView_key_main_b_workload_display_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_key_main_b_workload_display_line_1"
        android:layout_below="@+id/imageView_key_main_b_workload_display_line_1"
        android:layout_marginTop="112dp"
        android:src="@drawable/main_key_line" />
    
    <taeha.wheelloader.fseries_monitor.main.TextFitTextView
        android:id="@+id/textView_key_main_b_workload_display_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_key_main_b_workload_display_line_1"
        android:layout_alignLeft="@+id/imageView_key_main_b_workload_display_line_1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/Weighing_Display"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <RadioButton
        android:id="@+id/radioButton_key_main_b_workload_display_daily"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_key_main_b_workload_display_line_1"
        android:layout_below="@+id/imageView_key_main_b_workload_display_line_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="20dip"
        android:button="@null"
        android:drawableRight="@drawable/_selector_radio_btn"
        android:gravity="right"
        android:text="@string/Daily"
        android:textColor="@drawable/_selector_radio_txt_white_amber"
        android:singleLine="true"
        android:textSize="25sp" />
	
	<RadioButton
	    android:id="@+id/radioButton_key_main_b_workload_display_totala"
	    android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/radioButton_key_main_b_workload_display_daily"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@+id/radioButton_key_main_b_workload_display_daily"
        android:drawablePadding="20dip"
        android:button="@null"
        android:drawableRight="@drawable/_selector_radio_btn"
        android:gravity="right"
	    android:text="@string/Total_A"
	    android:textColor="@drawable/_selector_radio_txt_white_amber"
	    android:singleLine="true"
	    android:textSize="25sp" />
	
	<RadioButton
	    android:id="@+id/radioButton_key_main_b_workload_display_totalb"
	    android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/radioButton_key_main_b_workload_display_daily"
	    android:layout_below="@+id/radioButton_key_main_b_workload_display_daily"
	    android:layout_marginTop="20dp"
        android:drawablePadding="20dip"
        android:button="@null"
        android:drawableRight="@drawable/_selector_radio_btn"
        android:gravity="right"
	    android:text="@string/Total_B"
	    android:textColor="@drawable/_selector_radio_txt_white_amber"
	    android:singleLine="true"
	    android:textSize="25sp" />
	
	<RadioButton
	    android:id="@+id/radioButton_key_main_b_workload_display_totalc"
	    android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/radioButton_key_main_b_workload_display_totalb"
	    android:layout_alignLeft="@+id/radioButton_key_main_b_workload_display_totala"
        android:drawablePadding="20dip"
        android:button="@null"
        android:drawableRight="@drawable/_selector_radio_btn"
        android:gravity="right"
	    android:text="@string/Total_C"
	    android:textColor="@drawable/_selector_radio_txt_white_amber"
	    android:singleLine="true"
	    android:textSize="25sp" />
