<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_popup_multimedia_warning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_popup01_bg"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_multimedia_warning_title"
        android:layout_width="448dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:splitMotionEvents="false" >

        <ImageView
            android:id="@+id/imageView_popup_multimedia_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/main_quick_icon_fault_red" />

        <TextView
            android:id="@+id/textView_popup_multimedia_warning_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_popup_multimedia_warning"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="주행 및 작업 중 엔터테인먼트 기능 실행은 위험하오니 주의하십시오."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_multimedia_warning_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_popup_multimedia_warning_title"
        android:layout_centerHorizontal="true"
        android:splitMotionEvents="false" >

        <ImageButton
            android:id="@+id/imageButton_popup_multimedia_warning_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/_selector_popup01_short_btn1" />

        <taeha.wheelloader.fseries_monitor.main.TextFitTextView
            android:id="@+id/textView_popup_multimedia_warning_ok"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton_popup_multimedia_warning_ok"
            android:layout_alignLeft="@+id/imageButton_popup_multimedia_warning_ok"
            android:layout_alignRight="@+id/imageButton_popup_multimedia_warning_ok"
            android:layout_alignTop="@+id/imageButton_popup_multimedia_warning_ok"
            android:gravity="center"
            android:text="@string/OK"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>