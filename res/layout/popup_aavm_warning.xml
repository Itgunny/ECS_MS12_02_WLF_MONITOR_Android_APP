<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_popup_multimedia_warning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_popup01_bg"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_aavm_warning_title"
        android:layout_width="630dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:splitMotionEvents="false" >

        <ImageView
            android:id="@+id/imageView_popup_aavm_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/main_quick_icon_fault_red" />

        <TextView
            android:id="@+id/textView_popup_aavm_warning_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_popup_aavm_warning"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/AAVM_Warning_Popup"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_aavm_warning_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_popup_aavm_warning_title"
        android:layout_centerHorizontal="true"
        android:splitMotionEvents="false" >

        <ImageButton
            android:id="@+id/imageButton_popup_aavm_warning_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/_selector_popup01_short_btn1" />

        <taeha.wheelloader.fseries_monitor.main.TextFitTextView
            android:id="@+id/textView_popup_aavm_warning_ok"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton_popup_aavm_warning_ok"
            android:layout_alignLeft="@+id/imageButton_popup_aavm_warning_ok"
            android:layout_alignRight="@+id/imageButton_popup_aavm_warning_ok"
            android:layout_alignTop="@+id/imageButton_popup_aavm_warning_ok"
            android:gravity="center"
            android:text="@string/OK"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
        
        <CheckBox
            android:id="@+id/checkBox_popup_aavm_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/_selector_check_btn"
            android:layout_marginLeft="200dp"
            android:paddingLeft="15dp"
            android:text="다시 보지 않기"
            android:textColor="@drawable/_selector_radio_txt_black_amber"
            android:textSize="25sp" />
    </RelativeLayout>

</RelativeLayout>