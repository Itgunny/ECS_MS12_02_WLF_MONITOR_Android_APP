<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_center_main_a_quick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_a_center_bg02" >

    <ImageButton
        android:id="@+id/imageButton_center_main_a_quick_mirror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/_selector_quick_virtualkey_mirroring" />

    <ImageButton
        android:id="@+id/imageButton_center_main_a_quick_mediaplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="168dp"
        android:background="@drawable/_selector_quick_virtualkey_media" />
    
    <ImageButton
        android:id="@+id/imageButton_center_main_a_quick_keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="61dp"
        android:background="@drawable/_selector_quick_virtualkey_keypad" />
    
    <ImageView
        android:id="@+id/imageView_center_main_a_quick_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/main_a_center" />
    
    <ImageView
        android:id="@+id/imageView_center_main_a_quick_mirror_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/main_b_quick_btn_smart_terminal_s_02"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView_center_main_a_quick_mediaplayer_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="168dp"
        android:background="@drawable/main_b_quick_btn_media_s_02"
        android:visibility="invisible" />    
    
    <ImageView
        android:id="@+id/imageView_center_main_a_quick_option_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/main_b_center_quick_icon_s_02"
        android:visibility="invisible" />
        
    <ImageButton
        android:id="@+id/imageButton_center_main_a_quick_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/_selector_center_main_a_quick_btn" />
    
</RelativeLayout>