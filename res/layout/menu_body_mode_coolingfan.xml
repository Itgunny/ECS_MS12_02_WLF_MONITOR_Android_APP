<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:splitMotionEvents="false">
    
    <ImageView
        android:id="@+id/imageView_menu_body_mode_coolingfan_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="69dp"
        android:src="@drawable/line_menu_step1" />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_menu_body_mode_coolingfan_line"
        android:layout_alignLeft="@+id/imageView_menu_body_mode_coolingfan_line"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView_menu_body_mode_coolingfan_line" 
        android:splitMotionEvents="false">

        <RadioGroup
            android:id="@+id/radioGroup_menu_body_mode_coolingfan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" 
            android:splitMotionEvents="false">

            <RadioButton
                android:id="@+id/radioButton_menu_body_mode_coolingfan_off"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/Off"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/radioButton_menu_body_mode_coolingfan_auto"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/Automatic"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />
            
            <RadioButton
                android:id="@+id/radioButton_menu_body_mode_coolingfan_manual"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/Manual"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />
        </RadioGroup>
    </RelativeLayout>
    
    <FrameLayout
        android:id="@+id/FrameLayout_menu_body_mode_coolingfan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView_menu_body_mode_coolingfan_line" 
        android:splitMotionEvents="false">

    </FrameLayout>

</RelativeLayout>
