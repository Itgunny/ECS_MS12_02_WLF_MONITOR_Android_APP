<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_key_main_b_ridecontrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_key_bg" >
    
    <RadioGroup
        android:id="@+id/radioGroup_key_main_b_ridecontrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="71dp" >

       <RadioButton
           android:id="@+id/radioButton_key_main_b_ridecontrol_off"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/Off"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />

       <ImageView
           android:id="@+id/imageView_key_main_b_ridecontrol_line_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:src="@drawable/main_key_line" />

       <RadioButton
           android:id="@+id/radioButton_key_main_b_ridecontrol_on_always"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/On_Always"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />
       
       <ImageView
           android:id="@+id/imageView_key_main_b_ridecontrol_line_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:src="@drawable/main_key_line" />
       
       <RadioButton
           android:id="@+id/radioButton_key_main_b_ridecontrol_on_conditional"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:button="@drawable/_selector_radio_btn"
           android:text="@string/On_Conditional_Speed"
           android:textColor="@drawable/_selector_radio_txt_white_amber"
           android:textSize="25sp" />

   </RadioGroup>
   
    <ImageView
        android:id="@+id/imageView_key_main_b_ridecontrol_on_conditional_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/main_key_list_arrow" />

    <RelativeLayout
        android:id="@+id/Relativelayout_key_main_b_ridecontrol_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="52dp"
        android:layout_marginTop="303dp">
       
        <ImageView
	        android:id="@+id/imageView_key_main_b_ridecontrol_low_bg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/main_key_low_bg" />
	    
	    <ImageView
	        android:id="@+id/imageView_key_main_b_ridecontrol_low_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_key_main_b_ridecontrol_low_bg"
	        android:layout_alignRight="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	        android:layout_marginRight="190dp"
	        android:src="@drawable/main_key_low_line" />
	   
	    <ImageButton
	        android:id="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_key_main_b_ridecontrol_low_bg"
	        android:layout_alignRight="@+id/imageView_key_main_b_ridecontrol_low_bg"
	        android:background="@drawable/_selector_key_centerright_btn1" />
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	        android:layout_alignRight="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	        android:layout_alignTop="@+id/ImageButton_key_main_b_ridecontrol_low_ok" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" >
	
	            <ImageView
	                android:id="@+id/imageView_key_main_b_ridecontrol_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	                android:layout_alignTop="@+id/ImageButton_key_main_b_ridecontrol_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <TextView
	                android:id="@+id/textView_key_main_b_ridecontrol_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />

	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>
   
    

</RelativeLayout>
