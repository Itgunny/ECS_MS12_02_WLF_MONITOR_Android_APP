<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_popup_main_seatbelt_warning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_popup01_bg" 
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_main_seatbelt_warning_title"
        android:layout_width="448dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:splitMotionEvents="false">
        
       <TextView
           android:id="@+id/textView_popup_main_seatbelt_warning_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_toRightOf="@+id/imageView_popup_main_seatbelt_warning"
           android:gravity="left"
           android:text="@string/Seatbelt_Warning_Popup"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="@color/red"
           android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView_popup_main_seatbelt_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/main_warning_icon_seatbelt" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_main_seatbelt_warning_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_popup_main_seatbelt_warning_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:splitMotionEvents="false" >

        <ImageButton
            android:id="@+id/imageButton_popup_main_seatbelt_warning_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/_selector_popup01_short_btn1" />

        <taeha.wheelloader.fseries_monitor.main.TextFitTextView
            android:id="@+id/textView_popup_main_seatbelt_warning_ok"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton_popup_main_seatbelt_warning_ok"
            android:layout_alignLeft="@+id/imageButton_popup_main_seatbelt_warning_ok"
            android:layout_alignRight="@+id/imageButton_popup_main_seatbelt_warning_ok"
            android:layout_alignTop="@+id/imageButton_popup_main_seatbelt_warning_ok"
            android:gravity="center"
            android:text="@string/OK"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
