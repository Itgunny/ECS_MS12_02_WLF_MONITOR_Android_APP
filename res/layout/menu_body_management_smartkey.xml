<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <ImageView
        android:id="@+id/imageView_menu_body_management_smartkey_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="69dp"
        android:src="@drawable/line_menu_step1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_menu_body_management_smartkey_line"
        android:layout_alignLeft="@+id/imageView_menu_body_management_smartkey_line"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView_menu_body_management_smartkey_line" >

        <RadioGroup
            android:id="@+id/radioGroup_menu_body_management_smartkey_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >
	
	       <RadioButton
	           android:id="@+id/radioButton_menu_body_management_smartkey_use_on_disalbe"
	           android:layout_width="200dp"
	           android:layout_height="wrap_content"
	           android:button="@drawable/_selector_radio_btn"
	           android:text="@string/Disable"
	           android:textColor="@drawable/_selector_radio_txt_white_amber"
	           android:textSize="20sp" />
	
	       <RadioButton
	           android:id="@+id/radioButton_menu_body_management_smartkey_use_on_always"
	           android:layout_width="200dp"
	           android:layout_height="wrap_content"
	           android:layout_marginLeft="40dp"
	           android:button="@drawable/_selector_radio_btn"
	           android:text="@string/On_Always"
	           android:textColor="@drawable/_selector_radio_txt_white_amber"
	           android:textSize="20sp" />
	       
	       <RadioButton
	           android:id="@+id/radioButton_menu_body_management_smartkey_use_on_time"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginLeft="40dp"
	           android:button="@drawable/_selector_radio_btn"
	           android:text="@string/On_After_Specific_Time"
	           android:textColor="@drawable/_selector_radio_txt_white_amber"
	           android:textSize="20sp" />

   		</RadioGroup>
   
    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_management_smartkey_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        
        <ImageView
            android:id="@+id/imageView_menu_body_management_smartkey_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />
	    
	    <ImageView
	        android:id="@+id/imageView_menu_body_management_smartkey_low_line_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_management_smartkey_low_bg"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	        android:src="@drawable/main_key_low_line" />
	
	   <ImageView
	       android:id="@+id/imageView_menu_body_management_smartkey_low_line_2"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignBottom="@+id/imageView_menu_body_management_smartkey_low_bg"
	       android:layout_alignLeft="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	       android:src="@drawable/main_key_low_line" />
	   
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_management_smartkey_low_bg"
	        android:layout_alignRight="@+id/imageView_menu_body_management_smartkey_low_bg"
	        android:background="@drawable/_selector_menu_low_right_btn" />
	    
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_management_smartkey_low_bg"
	        android:layout_toLeftOf="@+id/imageView_menu_body_management_smartkey_low_line_1"
	        android:background="@drawable/_selector_menu_low_center_btn" />
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	        android:layout_alignRight="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	        android:layout_alignTop="@+id/ImageButton_menu_body_management_smartkey_low_ok" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" >
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_management_smartkey_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	                android:layout_alignTop="@+id/ImageButton_menu_body_management_smartkey_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <TextView
	                android:id="@+id/textView_menu_body_management_smartkey_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />
	
	        </LinearLayout>
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	        android:layout_alignRight="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	        android:layout_alignTop="@+id/ImageButton_menu_body_management_smartkey_low_cancel" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" >
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_management_smartkey_low_cancel_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	                android:layout_alignTop="@+id/ImageButton_menu_body_management_smartkey_low_cancel"
	                android:src="@drawable/menu_low_icon_cancel" />
	
	            <TextView
	                android:id="@+id/textView_menu_body_management_smartkey_low_cancel"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/Cancel"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />
	
	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
