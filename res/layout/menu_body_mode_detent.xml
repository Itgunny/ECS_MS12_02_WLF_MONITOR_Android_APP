<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Relativelayout_menu_body_mode_detent_low"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/imageView_menu_body_mode_detent_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/line_menu_step1" />

        <RelativeLayout
            android:id="@+id/RelativeLayout_menu_body_mode_detent_boom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView_menu_body_mode_detent_line"
            android:layout_alignLeft="@+id/imageView_menu_body_mode_detent_line"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageView_menu_body_mode_detent_line" >

            <ImageView
                android:id="@+id/imageView_menu_body_mode_detent_boom_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/menu_bluedot" />

            <TextView
                android:id="@+id/textView_menu_body_mode_detent_boom_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imageView_menu_body_mode_detent_boom_point"
                android:text="@string/Boom"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            <RadioGroup
                android:id="@+id/radioGroup_menu_body_mode_detent_boom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_menu_body_mode_detent_boom_title"
                android:layout_marginTop="89dp"
                android:orientation="horizontal" >
		
		       <RadioButton
		           android:id="@+id/radioButton_menu_body_mode_detent_boom_off"
		           android:layout_width="200dp"
		           android:layout_height="wrap_content"
		           android:button="@drawable/_selector_radio_btn"
		           android:text="@string/Off"
		           android:textColor="@drawable/_selector_radio_txt_white_amber"
		           android:textSize="25sp" />
		
		       <RadioButton
		           android:id="@+id/radioButton_menu_body_mode_detent_boom_on"
		           android:layout_width="200dp"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="40dp"
		           android:button="@drawable/_selector_radio_btn"
		           android:text="@string/On"
		           android:textColor="@drawable/_selector_radio_txt_white_amber"
		           android:textSize="25sp" />

   			</RadioGroup>

            <TextView
                android:id="@+id/textView_menu_body_mode_detent_boom_saveposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="59dp"
                android:background="@drawable/_selector_key_rearwiper_washer_btn1"
                android:gravity="center"
                android:text="@string/Save_Position"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/RelativeLayout_menu_body_mode_detent_bucket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView_menu_body_mode_detent_line"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView_menu_body_mode_detent_line"
            android:layout_below="@+id/imageView_menu_body_mode_detent_line" >

            <ImageView
                android:id="@+id/imageView_menu_body_mode_detent_bucket_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/menu_bluedot" />

            <TextView
                android:id="@+id/textView_menu_body_mode_detent_bucket_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imageView_menu_body_mode_detent_bucket_point"
                android:text="@string/Bucket"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            <RadioGroup
                android:id="@+id/radioGroup_menu_body_mode_detent_bucket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_menu_body_mode_detent_bucket_title"
                android:layout_marginTop="89dp"
                android:orientation="horizontal" >
		
		       <RadioButton
		           android:id="@+id/radioButton_menu_body_mode_detent_bucket_off"
		           android:layout_width="200dp"
		           android:layout_height="wrap_content"
		           android:button="@drawable/_selector_radio_btn"
		           android:text="@string/Off"
		           android:textColor="@drawable/_selector_radio_txt_white_amber"
		           android:textSize="25sp" />
		
		       <RadioButton
		           android:id="@+id/radioButton_menu_body_mode_detent_bucket_on"
		           android:layout_width="200dp"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="40dp"
		           android:button="@drawable/_selector_radio_btn"
		           android:text="@string/On"
		           android:textColor="@drawable/_selector_radio_txt_white_amber"
		           android:textSize="25sp" />

   			</RadioGroup>

            <TextView
                android:id="@+id/textView_menu_body_mode_detent_bucket_saveposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="59dp"
                android:background="@drawable/_selector_key_rearwiper_washer_btn1"
                android:gravity="center"
                android:text="@string/Save_Position"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

    </RelativeLayout>
    
 
    <RelativeLayout
        android:id="@+id/Relativelayout_menu_body_mode_detent_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
       
        <ImageView
            android:id="@+id/imageView_menu_body_mode_detent_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />
	    
	    <ImageView
	        android:id="@+id/imageView_menu_body_mode_detent_low_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_mode_detent_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_mode_detent_low_ok"
	        android:src="@drawable/main_key_low_line" />
	   
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_mode_detent_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_mode_detent_low_bg"
	        android:layout_alignRight="@+id/imageView_menu_body_mode_detent_low_bg"
	        android:background="@drawable/_selector_menu_low_right_btn" />
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_mode_detent_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_mode_detent_low_ok"
	        android:layout_alignRight="@+id/ImageButton_menu_body_mode_detent_low_ok"
	        android:layout_alignTop="@+id/ImageButton_menu_body_mode_detent_low_ok" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" >
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_mode_detent_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_mode_detent_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_mode_detent_low_ok"
	                android:layout_alignTop="@+id/ImageButton_menu_body_mode_detent_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <TextView
	                android:id="@+id/textView_menu_body_mode_detent_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />

	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
