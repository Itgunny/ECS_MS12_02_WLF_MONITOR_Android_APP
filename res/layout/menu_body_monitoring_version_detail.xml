<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
       <RelativeLayout
        android:id="@+id/Relativelayout_menu_body_monitoring_version_detail_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_management_machine_monitoring_bg_dark" >

        <TextView
            android:id="@+id/textView_menu_body_monitoring_version_detail_model_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="@string/Model"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_menu_body_monitoring_version_detail_model_data"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView_menu_body_monitoring_version_detail_model_title"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFB400"
            android:textSize="20sp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/Relativelayout_menu_body_monitoring_version_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Relativelayout_menu_body_monitoring_version_detail_model"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/menu_management_machine_monitoring_bg_light" >

        <TextView
            android:id="@+id/textView_menu_body_monitoring_version_detail_date_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="@string/Manufacture_Date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_menu_body_monitoring_version_detail_date_data"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView_menu_body_monitoring_version_detail_date_title"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFB400"
            android:textSize="20sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView_menu_body_monitoring_version_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Relativelayout_menu_body_monitoring_version_detail_low"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/Relativelayout_menu_body_monitoring_version_detail_date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:divider="@drawable/blank_5x5"
        android:listSelector="@drawable/blank_1x1"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

    </ListView>
    
    <RelativeLayout
        android:id="@+id/Relativelayout_menu_body_monitoring_version_detail_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
       
        <ImageView
            android:id="@+id/imageView_menu_body_monitoring_version_detail_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />
	    
	    <ImageView
	        android:id="@+id/imageView_menu_body_monitoring_version_detail_low_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	        android:src="@drawable/main_key_low_line" />
	   
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_monitoring_version_detail_low_bg"
	        android:layout_alignRight="@+id/imageView_menu_body_monitoring_version_detail_low_bg"
	        android:background="@drawable/_selector_menu_low_right_btn" />
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	        android:layout_alignRight="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	        android:layout_alignTop="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" >
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_monitoring_version_detail_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	                android:layout_alignTop="@+id/ImageButton_menu_body_monitoring_version_detail_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <TextView
	                android:id="@+id/textView_menu_body_monitoring_version_detail_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />

	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
