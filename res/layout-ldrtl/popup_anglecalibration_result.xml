<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_popup_anglecalibration_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_popup01_bg" 
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_anglecalibration_result_title"
        android:layout_width="448dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" 
        android:splitMotionEvents="false">
        
        <TextView
            android:id="@+id/textView_popup_anglecalibration_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"               
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_anglecalibration_result_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_popup_anglecalibration_result_title"
        android:layout_centerHorizontal="true" 
        android:splitMotionEvents="false">
        
        <ImageButton
	        android:id="@+id/imageButton_popup_anglecalibration_result_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/_selector_popup01_short_btn1" />
	
	    <TextView
	        android:id="@+id/textView_popup_anglecalibration_result_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton_popup_anglecalibration_result_ok"
	        android:layout_alignLeft="@+id/imageButton_popup_anglecalibration_result_ok"
	        android:layout_alignRight="@+id/imageButton_popup_anglecalibration_result_ok"
	        android:layout_alignTop="@+id/imageButton_popup_anglecalibration_result_ok"
	        android:gravity="center"
	        android:text="@string/OK"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/black"
	        android:textSize="30sp"
	        android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
