<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout_menu_body_mode_wiper_low"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        android:splitMotionEvents="false">
        
        <ImageView
            android:id="@+id/imageView_menu_body_mode_wiper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:src="@drawable/menu_mode_wiper_icon" />
        
        <RadioGroup
            android:id="@+id/radioGroup_menu_body_mode_wiper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@+id/imageView_menu_body_mode_wiper" 
            android:splitMotionEvents="false">

	       <RadioButton
	           android:id="@+id/radioButton_menu_body_mode_wiper_level1"
	           android:layout_width="300dp"
	           android:layout_height="wrap_content"
               android:drawablePadding="20dip"
               android:button="@null"
               android:drawableRight="@drawable/_selector_radio_btn"
               android:gravity="right"
	           android:text="@string/Slow"
	           android:textColor="@drawable/_selector_radio_txt_white_amber"
	           android:singleLine="true"
	           android:textSize="25sp" />
	
	       <RadioButton
	           android:id="@+id/radioButton_menu_body_mode_wiper_level2"
	           android:layout_width="300dp"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="40dp"
               android:drawablePadding="20dip"
               android:button="@null"
               android:drawableRight="@drawable/_selector_radio_btn"
               android:gravity="right"
	           android:text="@string/Normal"
	           android:textColor="@drawable/_selector_radio_txt_white_amber"
	           android:singleLine="true"
	           android:textSize="25sp" />
	       
	       <RadioButton
	           android:id="@+id/radioButton_menu_body_mode_wiper_level3"
	           android:layout_width="300dp"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="40dp"
               android:drawablePadding="20dip"
               android:button="@null"
               android:drawableRight="@drawable/_selector_radio_btn"
               android:gravity="right"
	           android:text="@string/Fast"
	           android:textColor="@drawable/_selector_radio_txt_white_amber"
	           android:singleLine="true"
	           android:textSize="25sp" />
	       
	       <RadioButton
	           android:id="@+id/radioButton_menu_body_mode_wiper_level4"
	           android:layout_width="300dp"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="40dp"
               android:drawablePadding="20dip"
               android:button="@null"
               android:drawableRight="@drawable/_selector_radio_btn"
               android:gravity="right"
	           android:text="@string/Very_Fast"
	           android:textColor="@drawable/_selector_radio_txt_white_amber"
	           android:singleLine="true"
	           android:textSize="25sp" />
	
	   </RadioGroup>
   
    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_mode_wiper_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:splitMotionEvents="false">
        
        <ImageView
            android:id="@+id/imageView_menu_body_mode_wiper_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />
	    
	    
	   
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_mode_wiper_low_bg"
	        android:layout_alignRight="@+id/imageView_menu_body_mode_wiper_low_bg"
	        android:background="@drawable/_selector_menu_low_right_btn" />
	    
	    <ImageButton
	        android:id="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_mode_wiper_low_bg"
	        android:layout_toLeftOf="@+id/imageView_menu_body_mode_wiper_low_line_1"
	        android:background="@drawable/_selector_menu_low_center_btn" />
	
	    <ImageView
	        android:id="@+id/imageView_menu_body_mode_wiper_low_line_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView_menu_body_mode_wiper_low_bg"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	        android:src="@drawable/main_key_low_line" />
	
	   <ImageView
	       android:id="@+id/imageView_menu_body_mode_wiper_low_line_2"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignBottom="@+id/imageView_menu_body_mode_wiper_low_bg"
	       android:layout_alignLeft="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	       android:src="@drawable/main_key_low_line" />
	   
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	        android:layout_alignRight="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	        android:layout_alignTop="@+id/ImageButton_menu_body_mode_wiper_low_ok" 
	        android:splitMotionEvents="false">
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_mode_wiper_low_ok_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	                android:layout_alignTop="@+id/ImageButton_menu_body_mode_wiper_low_ok"
	                android:src="@drawable/menu_low_icon_ok" />
	
	            <taeha.wheelloader.fseries_monitor.main.TextFitTextView
	                android:id="@+id/textView_menu_body_mode_wiper_low_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/OK"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />
	
	        </LinearLayout>
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	        android:layout_alignLeft="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	        android:layout_alignRight="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	        android:layout_alignTop="@+id/ImageButton_menu_body_mode_wiper_low_cancel" 
	        android:splitMotionEvents="false">
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" 
	            android:splitMotionEvents="false">
	
	            <ImageView
	                android:id="@+id/imageView_menu_body_mode_wiper_low_cancel_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	                android:layout_alignLeft="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	                android:layout_alignTop="@+id/ImageButton_menu_body_mode_wiper_low_cancel"
	                android:src="@drawable/menu_low_icon_cancel" />
	
	            <taeha.wheelloader.fseries_monitor.main.TextFitTextView
	                android:id="@+id/textView_menu_body_mode_wiper_low_cancel"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="10dp"
	                android:gravity="center"
	                android:text="@string/Cancel"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textSize="25sp"
	                android:textStyle="bold" />
	
	        </LinearLayout>
	    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
