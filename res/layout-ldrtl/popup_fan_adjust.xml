<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_popup02_bg" 
    android:splitMotionEvents="false">

    <ImageView
        android:id="@+id/imageView_popup_fanmode_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:src="@drawable/menu_popup01_line" />

    <taeha.wheelloader.fseries_monitor.main.TextFitTextView
        android:id="@+id/textView_popup_fanmode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Select Mode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="25sp" />
    
    <taeha.wheelloader.fseries_monitor.main.TextFitTextView
        android:id="@+id/textView_popup_fanmode_1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/_selector_popup01_long_btn1"
        android:gravity="center"
        android:text="Adjust Mode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

    <taeha.wheelloader.fseries_monitor.main.TextFitTextView
        android:id="@+id/textView_popup_fanmode_2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_popup_fanmode_1"
        android:layout_below="@+id/textView_popup_fanmode_1"
        android:layout_marginTop="10dp"
        android:background="@drawable/_selector_popup01_long_btn1"
        android:gravity="center"
        android:text="Fan Speed Max Mode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />
    
    <taeha.wheelloader.fseries_monitor.main.TextFitTextView
        android:id="@+id/textView_popup_fanmode_3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_popup_fanmode_1"
        android:layout_below="@+id/textView_popup_fanmode_2"
        android:layout_marginTop="10dp"
        android:background="@drawable/_selector_popup01_long_btn1"
        android:gravity="center"
        android:text="Fan Reverse Mode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

</RelativeLayout>
