<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name ="RideControlSpeedSeekBar">
    	<item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/_seekbar_ridecontrol_speed</item>
        <item name="android:minHeight">7dip</item>
        <item name="android:maxHeight">7dip</item>   
        <item name="android:focusable">true</item>
    </style>
    <style name ="PressureCalibrationProgressBar">
    	<item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/_progressbar_pressure_calibration</item>
        <item name="android:minHeight">7dip</item>
        <item name="android:maxHeight">7dip</item>   
        <item name="android:focusable">true</item>
    </style>
    <style name ="MaintNormalProgressBar">
    	<item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/_progressbar_maint_normal</item>
        <item name="android:minHeight">7dip</item>
        <item name="android:maxHeight">7dip</item>   
        <item name="android:focusable">true</item>
    </style>

</resources>
