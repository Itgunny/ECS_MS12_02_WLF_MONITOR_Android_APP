<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:splitMotionEvents="false">

    <ImageView
        android:id="@+id/imageView_menu_body_mode_enginedelayshutdown_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="69dp"
        android:src="@drawable/line_menu_step1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_menu_body_mode_enginedelayshutdown_line1"
        android:layout_alignLeft="@+id/imageView_menu_body_mode_enginedelayshutdown_line1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView_menu_body_mode_enginedelayshutdown_line1" 
        android:splitMotionEvents="false">

        <RadioGroup
            android:id="@+id/radioGroup_menu_body_mode_enginedelayshutdown_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" 
            android:splitMotionEvents="false">

            <RadioButton
                android:id="@+id/radioButton_menu_body_mode_enginedelayshutdown_use_setting"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/Setting"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/radioButton_menu_body_mode_enginedelayshutdown_use_clear"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:button="@drawable/_selector_radio_btn"
                android:text="@string/Clear"
                android:textColor="@drawable/_selector_radio_txt_white_amber"
                android:textSize="25sp" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout_menu_body_mode_enginedelayshutdown_low"
        android:layout_below="@+id/imageView_menu_body_mode_enginedelayshutdown_line1" 
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/textView_menu_body_mode_enginedelayshutdown_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/menu_left_amber" />

        <TextView
            android:id="@+id/textView_menu_body_mode_enginedelayshutdown_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/RelativeLayout_menu_body_mode_enginedelayshutdown_seekbar"
            android:layout_below="@+id/RelativeLayout_menu_body_mode_enginedelayshutdown_seekbar"
            android:layout_marginTop="-10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_menu_body_mode_enginedelayshutdown_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/RelativeLayout_menu_body_mode_enginedelayshutdown_seekbar"
            android:layout_below="@+id/RelativeLayout_menu_body_mode_enginedelayshutdown_seekbar"
            android:layout_marginTop="-10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/RelativeLayout_menu_body_mode_enginedelayshutdown_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="140dp" 
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageView_menu_body_mode_enginedelayshutdown_seekbar_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/menu_mode_engine_auto_stop_slide_bg" />

            <SeekBar
                android:id="@+id/seekBar_menu_body_mode_enginedelayshutdown"
                style="@style/RideControlSpeedSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView_menu_body_mode_enginedelayshutdown_seekbar_bg"
                android:layout_alignRight="@+id/imageView_menu_body_mode_enginedelayshutdown_seekbar_bg"
                android:minHeight="5dip"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:thumb="@drawable/_selector_seekbar_thumb" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_menu_body_mode_enginedelayshutdown_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageView_menu_body_mode_enginedelayshutdown_low_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_low_bg" />

        <ImageView
            android:id="@+id/imageView_menu_body_mode_enginedelayshutdown_low_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_mode_enginedelayshutdown_low_bg"
            android:layout_alignLeft="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
            android:src="@drawable/main_key_low_line" />

        <ImageView
            android:id="@+id/imageView_menu_body_mode_enginedelayshutdown_low_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_mode_enginedelayshutdown_low_bg"
            android:layout_alignLeft="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
            android:src="@drawable/main_key_low_line" />

        <ImageButton
            android:id="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_mode_enginedelayshutdown_low_bg"
            android:layout_alignRight="@+id/imageView_menu_body_mode_enginedelayshutdown_low_bg"
            android:background="@drawable/_selector_menu_low_right_btn" />

        <ImageButton
            android:id="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_menu_body_mode_enginedelayshutdown_low_bg"
            android:layout_toLeftOf="@+id/imageView_menu_body_mode_enginedelayshutdown_low_line_1"
            android:background="@drawable/_selector_menu_low_center_btn" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
            android:layout_alignLeft="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
            android:layout_alignRight="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
            android:layout_alignTop="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok" 
            android:splitMotionEvents="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" 
                android:splitMotionEvents="false">

                <ImageView
                    android:id="@+id/imageView_menu_body_mode_enginedelayshutdown_low_ok_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
                    android:layout_alignLeft="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
                    android:layout_alignTop="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_ok"
                    android:src="@drawable/menu_low_icon_ok" />

                <TextView
                    android:id="@+id/textView_menu_body_mode_enginedelayshutdown_low_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/OK"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
            android:layout_alignLeft="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
            android:layout_alignRight="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
            android:layout_alignTop="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel" 
            android:splitMotionEvents="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" 
                android:splitMotionEvents="false">

                <ImageView
                    android:id="@+id/imageView_menu_body_mode_enginedelayshutdown_low_cancel_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
                    android:layout_alignLeft="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
                    android:layout_alignTop="@+id/ImageButton_menu_body_mode_enginedelayshutdown_low_cancel"
                    android:src="@drawable/menu_low_icon_cancel" />

                <TextView
                    android:id="@+id/textView_menu_body_mode_enginedelayshutdown_low_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/Cancel"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>